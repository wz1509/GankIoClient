<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:baselineAligned="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_gank_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            tools:background="@color/colorAccent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#80000000"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_gank_who"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_gank_who_white"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/ic_gank_who_white"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="代码家"/>

            <TextView
                android:id="@+id/item_gank_date"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/item_gank_who"
                android:layout_toRightOf="@id/item_gank_who"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="2017-11-16T12:01:05.619Z"/>

            <ImageView
                android:id="@+id/item_gank_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_gank_more_horiz_white"/>

            <TextView
                android:id="@+id/item_gank_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_gank_who"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="可能是最好看的 Android 圆形 Menu 菜单效果。"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>